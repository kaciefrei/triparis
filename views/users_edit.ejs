<%- include("partial_headers.ejs"); %>
 
<h1>Add an User:</h1>

<!-- body-parser ==> we cannot use multipart/form-data ==> no file uploads -->

    <form class="add" action='/excursion/update-user' method='post' 
                enctype='application/x-www-form-urlencoded'>
        <table class="table table-hover">            
            
            <tr><td>Username:</td>
                <td><input type='text' name='user_name' value='<%= oneUser.user_name %>' /></td></tr>
            <tr><td>eMail:</td>
                <td><input type='text' name='user_email' value='<%= oneUser.user_email %>' /></td></tr>
            <tr><td>Role:</td>
                <td>
                    <select name='user_role'>
                        <option valeur="USER">User</option>
                        <option valeur="ADMIN">Admin</option>
                    </select>
                </td></tr>
            <tr><td>Password:</td>
                <td><input type='text' name='user_pass' value='<%= oneUser.user_pass %>' /></td></tr>
        
            <tr><td colspan='2'><input class="btn btn-light btn-block" type='submit' value='SEND' /> </td></tr>
        </table>
    </form>


    <%- include("partial_footers.ejs"); %>