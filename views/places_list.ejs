                            <a href='/place/del-place/<%= p.Place_id %>'><button type="button" class="binbutton2">üóëÔ∏è</button></a>
                        </div>
                        <small class="text" style="font-weight: bold;"><%= p.Transport %></small>
                        </div>
                    </div>
                    </div>
                </div>
            <% } %>
      </div>
    </div>
  </div>

