<!-- RECEIVES: oneCar [a single car object] + brands [array of brand objects] -->
<%- include("partial_headers.ejs"); %>

<h1>Add an excursion:</h1>

<!-- body-parser ==> we cannot use multipart/form-data ==> no file uploads -->

    <form class="add" action='/excursion/update-excursion/<%= oneExcursion.Excursion_id %>' method='post' 
                enctype='application/x-www-form-urlencoded'>
        <table class="table table-hover">            
            
            <tr><td>Name:</td>
                <td><input type='text' name='Name' value='<%= oneExcursion.Name %>' /></td></tr>

            <tr><td>Type:</td>
                <td>
                    <select name='Type'>
                        <option valeur="Activity">Activity</option>
                        <option valeur="Visit">Visit</option>
                        <option valeur="Walk">Walk</option>
                    </select>
                </td></tr>
            <tr><td>Duaration time:</td>
                <td><input type='number' name='Duration_time' value='<%= oneExcursion.Duration_time %>' /></td></tr>
            <tr><td>Place:</td>
                <td>
                    <select name='Place'>
                    <% for (var p of place) { %>
                            <option value='<%= p.Place_id %>' 
                                <%- p.Place_id==oneExcursion.Place ? "selected='selected'" : "" %>
                            > <%= p.Name_place %></option>
                    <% } %>
                    </select>
                </td></tr>
            <tr><td>Image:</td>
                <td><input type='text' name='Image' value='<%= oneExcursion.Image %>' /></td></tr>
            <tr><td colspan='2'><input class="btn btn-light btn-block" type='submit' value='SEND' /> </td></tr>
        </table>
    </form>


    <%- include("partial_footers.ejs"); %>